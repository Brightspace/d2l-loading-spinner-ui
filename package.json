  "license": "Apache-2.0",
  "devDependencies": {
    "eslint": "^4.3.0",
    "eslint-config-brightspace": "^0.3.1",
    "eslint-plugin-html": "^3.1.1",
    "polymer-cli": "^1.3.1"
  }
}
